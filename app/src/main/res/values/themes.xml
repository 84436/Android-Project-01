<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Splash screen -->
    <style name="Theme.GalleryOne.SplashScreen">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <!-- Base application theme. Make it inheritable to API 23 and API 27. -->
    <style name="Theme.GalleryOne.API21" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/md_purple_500</item>
        <item name="colorPrimaryVariant">@color/md_purple_700</item>
        <item name="colorOnPrimary">@color/md_white_1000</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/md_purple_A400</item>
        <item name="colorSecondaryVariant">@color/md_purple_A200</item>
        <item name="colorOnSecondary">@color/md_black_1000</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/status_bar_dark</item>
    </style>

    <!-- Start here -->
    <style name="Theme.GalleryOne" parent="Theme.GalleryOne.API21" />
</resources>
