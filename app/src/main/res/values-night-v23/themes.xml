<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Splash screen -->
    <style name="Theme.GalleryOne.SplashScreen">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <!-- Base application theme. -->
    <style name="Theme.GalleryOne" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/md_purple_200</item>
        <item name="colorPrimaryVariant">@color/md_purple_700</item>
        <item name="colorOnPrimary">@color/md_black_1000</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/md_purple_A200</item>
        <item name="colorSecondaryVariant">@color/md_purple_A200</item>
        <item name="colorOnSecondary">@color/md_black_1000</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/background</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>
</resources>
